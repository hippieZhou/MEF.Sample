<Window
    x:Class="BlankApp.Views.LoginDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:BlankApp.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:prism="http://prismlibrary.com/"
    Title="用户登录"
    Width="400"
    Height="200"
    local:LoginDialog.DialogResult="{Binding DialogResult}"
    prism:ViewModelLocator.AutoWireViewModel="True"
    AllowsTransparency="True"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None"
    mc:Ignorable="d">
    <Grid>
        <StackPanel
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Orientation="Horizontal">
            <StackPanel.Resources>
                <Style TargetType="Button">
                    <Setter Property="Width" Value="64" />
                    <Setter Property="Height" Value="32" />
                    <Setter Property="Margin" Value="12" />
                </Style>
            </StackPanel.Resources>
            <Button Command="{Binding LoginCommand}" Content="登录" />
            <Button Command="{Binding ExitCommand}" Content="退出" />
        </StackPanel>
    </Grid>
</Window>
